@model IEnumerable<string>

@{ 
    bool horizontal = ((bool)(ViewContext.RouteData.Values["horizontalLayout"] ?? false));
    string wrapperClasses = horizontal ? null : "btn-group btn-group-sm btn-group-justified";
}

<div class="@wrapperClasses">
    @Html.ActionLink("Home", "List", "Product", null, new
    {
        @class = "btn btn-block btn-default btn-sm"
    })


    @foreach (var link in Model)
    {
        @Html.RouteLink(link, new
        {
            controller = "Product",
            action = "List",
            category = link,
            page = 1
        }, new
        {
            @class = "btn btn-block btn-sm" + (link == ViewBag.SelectedCategory ? " btn-primary" : " btn-default")
        })
    }


</div>